rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow access to the 'users' collection
    match /users/{userId} {
      // DEVELOPMENT MODE: Allow read/write if authenticated OR if utilizing the dev fallback
      // In production, you should revert this to: if request.auth != null && request.auth.uid == userId;
      allow read, write: if true; 

      match /{document=**} {
        allow read, write: if true;
      }
    }

    // Deprecated collection, keeping for safety
    match /moneyApp/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}