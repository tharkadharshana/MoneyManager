rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Securely allow users to access only their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Match all subcollections (transactions, accounts, summary, etc.)
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}