rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Explicitly allow guest_user full access (Fallback mode)
    // This allows the app to function even if Anonymous Auth is disabled in the console
    match /moneyApp/guest_user {
      allow read, write: if true;
      match /{document=**} {
        allow read, write: if true;
      }
    }

    // Standard authenticated user access
    match /moneyApp/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}